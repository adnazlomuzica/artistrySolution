@model artistry_Data.Models.Messages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<div>
    <form asp-controller="Message" asp-action="Save" method="post" role="form">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />

            <div class="form-group">
                <label asp-for="Receiver" class="control-label col-md-2"></label>
                <div class="col-md-12">
                    <select asp-for="ReceiverId" asp-items="@ViewBag.ReceiverId" class="form-control"></select>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Text" class="control-label col-md-2"></label>
                <div class="col-md-12">
                    <textarea asp-for="Text" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Send" class="btn btn-primary message-save" style="width:100%;" />
                </div>
            </div>
        </div>
    </form>
</div>

