@model artistry_Data.Models.Events
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="page-header page-header-default">
    <div class="page-header-content">
        <div class="page-title">
            <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Events</span></h4>
        </div>
        <div class="heading-elements">
            <div class="heading-btn-group">
                <a asp-controller="Event" asp-action="GetEvent" asp-route-id="@Model.Id" class="btn btn-link btn-float has-text"><i class="icon-pencil text-primary"></i><span>Edit</span></a>
                <a asp-controller="Event" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-link btn-float has-text"><i class="icon-trash text-primary"></i><span>Delete</span></a>
            </div>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="icon-home2 position-left"></i> Home</a></li>
            <li class="active"><a asp-controller="Event" asp-action="Index">Events</a></li>
        </ul>
    </div>
</div>


<div class="content" style="padding-top:0px;padding-bottom:0;" id="closePanel1">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-toggle="collapse" data-target="#collapsePanel1" class="icon-arrow-down12"></a></li>
                    <li><a data-close="close" data-target="#closePanel1" class="icon-cross3"></a></li>
                </ul>
            </div>
        </div>
        <div class="panel-body" id="collapsePanel1">
            <div style="margin-bottom:30px;">
                <div class="row">
                    <p class="col-md-12 text-bold" style="font-size:18px">@Model.Title</p>
                </div>
                <div class="row">
                    <p class="col-md-6 text-semibold" style="font-size:16px;">@Model.StartDate.ToString("dd/MM/yyyy")<span>   @@    </span>@Model.StartDate.ToShortTimeString()<span>  -  </span>@Model.EndTime.ToString("dd/MM/yyyy")<span>    @@    </span>@Model.EndTime.ToShortTimeString()</p>
                </div><br />
                <div class="row">
                    <p class="col-md-12">@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>