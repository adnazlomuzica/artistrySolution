@model List<artistry_Web.Areas.Moderator.ViewModels.ArtworkInfoVM>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<br /><hr />
<div class="row">
    @foreach (var x in Model)
    {
        <div class="col-md-3">
            <div class="panel panel-flat" style="height:385px;color:#000;">
                <div class="panel-body">
                    <div class="image">
                        @if (x.Image != null)
                        {
                            <img src="@Url.Action("RenderImage", "Image", new { id = x.ImageId })" class="image-thumb" alt="" width="200" height="250" />
                        }
                        else
                        {
                            <img src="~/assets/images/placeholder.jpg" class="image-thumb" alt="" width="200" height="250" />
                        }
                    </div>
                </div>
                <div class="information" style="font-size:15px;margin-top:10px;padding-top:10px;margin-left:10px;color:#000;">
                    <div class="row">
                        <div class="col-md-12">
                            <span class="text-bold" style="text-align:center">@x.Name</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-9">
                            <span>@x.Artist</span>
                        </div>
                        <div class="col-md-3">
                            <a asp-controller="ArtworkCollection" asp-action="Delete" asp-route-id="@x.Id" style="color:#000;"><i class="icon-trash text-muted"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>