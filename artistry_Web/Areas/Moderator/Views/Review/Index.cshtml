@model IEnumerable<artistry_Data.Models.Reviews>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="page-header page-header-default">
    <div class="page-header-content">
        <div class="page-title">
            <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Reviews</span></h4>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="icon-home2 position-left"></i>Home</a></li>
            <li class="active"><a asp-controller="Review" asp-action="Index">Reviews</a></li>
        </ul>
    </div>
</div>

<div class="content" style="padding-bottom:0px;" id="closePanel">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h6 class="panel-title">Reviews</h6>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-toggle="collapse" data-target="#collapsePanel" class="icon-arrow-down12"></a></li>
                    <li><a data-close="close" data-target="#closePanel" class="icon-cross3"></a></li>
                </ul>
            </div>
        </div>
        <div class="panel-body" id="collapsePanel">
            <div class="row">
                @foreach (var x in Model)
                {
                    <div class="col-lg-6">
                        <ul class="media-list content-group">
                            <li class="media stack-media-on-mobile">
                                <div class="thumb">
                                </div>
                               

                                <div class="media-body" style="display:inline;">
                                    <div class="media-left" style="width:100px;height:80px;float:left;">
                                        <img src="~/assets/images/placeholder.jpg" class="img-responsive img-rounded" style="width:100px;height:80px;">
                                    </div>
                                    <div>
                                        <h6 class="media-heading"><a href="#">@x.Client.FirstName @x.Client.LastName</a></h6>
                                        <ul class="list-inline list-inline-separate text-muted mb-5">
                                            <li>
                                                @for (int i = 1; i <= x.Rating; i++)
                                                {
                                                    <i class="position-left icon-star-full2 text-muted"></i>
                                                }
                                            </li>
                                            <li>
                                                @if (x.Date.Day == DateTime.Now.Day)
                                                {
                                                    <span>@x.Date.ToShortTimeString()</span>
                                                }
                                                else
                                                {
                                                    <span>@x.Date.ToString("dd/MM/yyyy")</span>
                                                }
                                            </li>
                                        </ul>
                                        <p style="word-wrap: break-word; white-space: normal;">
                                           
                                            
                                            
                                                @x.Note.ToString()
                                            
                                        </p>
                                        </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

