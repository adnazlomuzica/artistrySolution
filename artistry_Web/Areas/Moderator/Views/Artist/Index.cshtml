@model List<artistry_Web.Areas.Moderator.ViewModels.ArtistInfoVM>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ string search = "";}
<style>

    .image img {
        max-width: 100%;
        width: 100%;
        object-fit: contain;
    }

    .border {
        max-height: 100%;
    }

    .news {
        height: auto;
    }
</style>
<div class="page-header page-header-default">
    <div class="page-header-content">
        <div class="page-title">
            <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Artists</span></h4>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="icon-home2 position-left"></i> Home</a></li>
            <li class="active"><a asp-controller="Artist" asp-action="Index">Artists</a></li>
        </ul>
    </div>
</div>
<div class="content" style="padding-bottom:0px;" id="closePanel">
    <form asp-action="Search" style="display:inline;" method="get">
        <div class="input-group  input-field" style="margin-left:20px;">
            <div class="input-group-addon">
                <span class="fa fa-search"></span>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <input asp-for="@search" type="search" class="form-control" placeholder="Search.." />
                </div>
                <div class="col-md-1">
                    <input type="submit" class="btn btn-default" value="Search" />
                </div>
            </div>
        </div>
    </form>
    <br /><hr />
    <div class="row">
        @foreach (var x in Model)
        {
            <div class="col-md-3">
                <a asp-action="Details" asp-route-id="@x.Id" class="artworks">
                    <div class="panel panel-flat" style="height:375px;color:#000;">
                        <div class="panel-body" id="collapsePanel1 reloadPanel1">
                            <div class="border">
                                <div class="image">
                                    @if (x.Image != null)
                                    {
                                        <img src="@Url.Action("RenderImage", "Image", new { id = x.ImageId })" class="image-thumb" alt="" width="200" height="250" />
                                    }
                                    else
                                    {
                                        <img src="~/assets/images/placeholder.jpg" class="image-thumb" alt="" width="200" height="250" />
                                    }
                                </div>
                                <div class="information" style="font-size:15px;margin-top:10px;padding-top:10px;color:#000;">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <span class="text-bold" style="text-align:center">@x.Name</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <span style="text-align:center">
                                                @x.Country
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-top:5px;">
                                        <div class="col-md-12">
                                            <span class="text-muted">
                                                @x.Born <span>-</span> @x.Died
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>