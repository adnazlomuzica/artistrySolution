@model artistry_Web.Areas.Moderator.ViewModels.ArtworkVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="page-header page-header-default">
    <div class="page-header-content">
        <div class="page-title">
            <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Artworks</span></h4>
        </div>
        <div class="heading-elements">
            <div class="heading-btn-group">
                <a asp-controller="Image" asp-action="AddArtwork" asp-route-id="@Model.Id" class="btn btn-link btn-float has-text"><i class="icon-image2 text-primary"></i><span>Gallery</span></a>

                @if (Model.Active)
                {
                    <a asp-controller="Artwork" asp-action="Deactivate" asp-route-id="@Model.Id" class="btn btn-link btn-float has-text"><i class="icon-subtract text-primary"></i><span>Deactivate</span></a>
                }
                else
                {
                    <a asp-controller="Artwork" asp-action="Activate" asp-route-id="@Model.Id" class="btn btn-link btn-float has-text"><i class="icon-add text-primary"></i><span>Activate</span></a>
                }
            </div>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="icon-home2 position-left"></i> Home</a></li>
            <li class="active"><a asp-controller="Artwork" asp-action="Index">Artworks</a></li>
        </ul>
    </div>
</div>

<div class="content" style="padding-bottom:0px;" id="closePanel1">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h6 class="panel-title">Edit</h6>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-toggle="collapse" data-target="#collapsePanel1" class="icon-arrow-down12"></a></li>
                    <li><a data-close="close" data-target="#closePanel1" class="icon-cross3"></a></li>
                </ul>
            </div>
        </div>
        <div class="panel-body" id="collapsePanel1">
            <form asp-action="Edit" role="form">
                @Html.AntiForgeryToken()
                <input asp-for="Id" type="hidden" />
                <input asp-for="MuseumId" type="hidden" />
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Name</label>
                            <input asp-for="Name" type="text" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label>Accession number</label>
                            <input asp-for="AccessionNumber" type="text" class="form-control" />
                            <span asp-validation-for="AccessionNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Created</label>
                            <input asp-for="Date" type="text" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label>Country</label>
                            <select asp-for="CountryId" asp-items="Model.Country" class="form-control"></select>
                            <span asp-validation-for="CountryId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Artwork type</label>
                            <select asp-for="ArtworkTypeId" asp-items="Model.ArtworkType" class="form-control"></select>
                            <span asp-validation-for="ArtworkTypeId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label>Artist</label>
                            <select asp-for="ArtistId" asp-items="Model.Artist" class="form-control"></select>
                            <span asp-validation-for="ArtistId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Style</label>
                            <select asp-for="StyleId" asp-items="Model.Style" class="form-control"></select>
                            <span asp-validation-for="StyleId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Material</label>
                                    <select asp-for="MaterialId" asp-items="Model.Material" class="form-control"></select>
                                    <span asp-validation-for="MaterialId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <label>Provenance</label>
                            <textarea asp-for="Provenance" rows="6" class="form-control"></textarea>
                            <span asp-validation-for="Provenance" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <label>Catalogue entry</label>
                            <textarea asp-for="CatalogueEntry" rows="6" class="form-control"></textarea>
                            <span asp-validation-for="CatalogueEntry" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Save <i class="icon-arrow-right14 position-right"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>

