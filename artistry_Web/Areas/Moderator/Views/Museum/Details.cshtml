@model artistry_Web.Areas.Moderator.ViewModels.MuseumVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link href="~/css/fancybox-style.css" rel="stylesheet" type="text/css" />

<div class="page-header page-header-default">
    <div class="page-header-content">
        <div class="page-title">
            <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Museums</span></h4>
        </div>
        <div class="heading-elements">
            <div class="heading-btn-group">
                <a asp-controller="Museum" asp-action="GetMuseum" asp-route-id="@Model.Id" class="btn btn-link btn-float has-text add-museum"><i class="icon-pencil text-primary"></i><span>Edit</span></a>
            </div>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="icon-home2 position-left"></i> Home</a></li>
            <li class="active"><a asp-controller="Museum" asp-action="Index">Museums</a></li>
            <li class="active"><a asp-controller="Museum" asp-action="Details">Details</a></li>
        </ul>
    </div>
</div>


<div class="content" style="padding-top:0px;padding-bottom:0px;" id="closePanel3">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h6 class="panel-title" style="margin-bottom:20px;">Account information</h6>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-toggle="collapse" data-target="#collapsePanel3" class="icon-arrow-down12"></a></li>
                    <li><a data-close="close_details" data-target="#closePanel3" class="icon-cross3"></a></li>
                </ul>
            </div>
        </div>
        <div class="panel-body" id="collapsePanel3">
            <div style="margin-bottom:30px;">
                <div class="row">
                    <p class="col-md-3 text-bold">Username</p>
                    <p class="col-md-3">@Model.Username</p>

                    <p class="col-md-3 text-bold">Registration date</p>
                    <p class="col-md-3">@Model.RegistrationDate</p>
                </div>
            </div>
        </div>
    </div>


    <div class="panel panel-flat">
        <div class="panel-heading">
            <h6 class="panel-title" style="margin-bottom:20px;">Profile information</h6>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-toggle="collapse" data-target="#collapsePanel3" class="icon-arrow-down12"></a></li>
                    <li><a data-close="close_details" data-target="#closePanel3" class="icon-cross3"></a></li>
                </ul>
            </div>
        </div>
        <div>
            <div class="panel-body" id="collapsePanel3">
                <div class="row">
                    <p class="col-md-3 text-bold">Name</p>
                    <p class="col-md-3">@Model.Name</p>

                    <p class="col-md-3 text-bold">Museum type</p>
                    <p class="col-md-3">@Model.MuseumType</p>
                </div><hr />

                <div class="row">

                    <p class="col-md-3 text-bold">Email</p>
                    <p class="col-md-3">@Model.Email</p>

                    <p class="col-md-3 text-bold">Phone</p>
                    <p class="col-md-3">@Model.Phone</p>
                </div><hr />

                <div class="row">

                    <p class="col-md-3 text-bold">Address</p>
                    <p class="col-md-3">@Model.Address</p>

                    <p class="col-md-3 text-bold">Opening year</p>
                    @if (Model.Year == 0)
                    {
                        <p class="col-md-3"></p>
                    }
                    else
                    {
                        <p class="col-md-3">@Model.Year</p>

                    }
                </div><hr />

                <div class="row">
                    <p class="col-md-3 text-bold">Online tickets</p>
                    @if (Model.TicketSelling)
                    {
                        <p class="col-md-3">YES</p>
                    }
                    else
                    {
                        <p class="col-md-3">NO</p>
                    }
                    <p class="col-md-3 text-bold">QR scanning</p>
                    @if (Model.QrScanning)
                    {
                        <p class="col-md-3">YES</p>
                    }
                    else
                    {
                        <p class="col-md-3">NO</p>
                    }
                </div><hr />
                <div class="row">
                    <p class="col-md-3 text-bold">Working hours</p>

                    <p class="col-md-3">
                        @foreach (var item in Model.WorkingHour)
                        {
                            if (item.Day == 1)
                            {
                                <span class="text-semibold">Monday: </span>
                                <span>@item.OpenTime.ToString("HH:mm") </span><span>-</span> <span> @item.CloseTime.ToString("HH:mm")</span>
                            }
                            else if (item.Day == 2)
                            {
                                <span class="text-semibold">Tuesday: </span>
                                <span>@item.OpenTime.ToString("HH:mm") </span><span>-</span> <span> @item.CloseTime.ToString("HH:mm")</span>
                            }
                            else if (item.Day == 3)
                            {
                                <span class="text-semibold">Wednesday: </span>
                                <span>@item.OpenTime.ToString("HH:mm") </span><span>-</span> <span> @item.CloseTime.ToString("HH:mm")</span>
                            }
                            else if (item.Day == 4)
                            {
                                <span class="text-semibold">Thursday: </span>
                                <span>@item.OpenTime.ToString("HH:mm") </span><span>-</span> <span> @item.CloseTime.ToString("HH:mm")</span>
                            }
                            else if (item.Day == 5)
                            {
                                <span class="text-semibold">Friday: </span>
                                <span>@item.OpenTime.ToString("HH:mm") </span><span>-</span> <span> @item.CloseTime.ToString("HH:mm")</span>
                            }
                            else if (item.Day == 6)
                            {
                                <span class="text-semibold">Saturday: </span>
                                <span>@item.OpenTime.ToString("HH:mm") </span><span>-</span> <span> @item.CloseTime.ToString("HH:mm")</span>
                            }
                            else if (item.Day == 7)
                            {
                                <span class="text-semibold">Sunday: </span>
                                <span>@item.OpenTime.ToString("HH:mm") </span><span>-</span> <span> @item.CloseTime.ToString("HH:mm")</span>
                            }

                            <br />
                        }
                    </p>
                </div><hr />
                <div class="row">

                    <p class="col-md-6 text-bold">Description</p>
                    <p class="col-md-12">@Model.Description</p>
                </div><hr />
                <div class="row">
                    @foreach (var item in Model.Images)
                    {
                        <a rel="group1" href="@Url.Action("RenderImage", "Image", new { id=item.Id})"><img src="@Url.Action("RenderThumb","Image", new { id=item.Id})" class="image-thumb" alt="" /></a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>





<script>
    $(document).ready(function () {

        $("a[rel=group1]").fancybox({
            'type': 'image',
            'transitionIn': 'none',
            'transitionOut': 'none'
        });
    });
</script>
