@model IEnumerable<artistry_Data.Models.TicketTypes>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{Boolean allow = Convert.ToBoolean(ViewData["Allow"]);}

<div class="page-header page-header-default">
    <div class="page-header-content">
        <div class="page-title">
            <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Ticket types</span></h4>
        </div>
        <div class="heading-elements">
            <div class="heading-btn-group">
                @if (allow == true)
                {
                    <a asp-controller="TicketType" asp-action="Add" class="btn btn-link btn-float has-text add-style"><i class="icon-plus-circle2 text-primary"></i><span>Add</span></a>
                }
                else
                {
                    <a data-toggle="modal" data-target="#add-modal" class="btn btn-link btn-float has-text add-style"><i class="icon-plus-circle2 text-primary"></i><span>Add</span></a>
                }
            </div>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="icon-home2 position-left"></i>Home</a></li>
            <li class="active"><a asp-controller="TicketType" asp-action="Index">Ticket types</a></li>
        </ul>
    </div>
</div>

<div class="content" style="padding-bottom:0px;" id="closePanel">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title">Ticket types</h5>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-toggle="collapse" data-target="#collapsePanel" class="icon-arrow-down12"></a></li>
                    <li><a data-close="close" data-target="#closePanel" class="icon-cross3"></a></li>
                </ul>
            </div>
        </div>

        <div id="collapsePanel">
            <table class="table datatable-basic">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Museum</th>
                        <th>Price</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Type</td>
                            <td>@item.Museum.Name</td>
                            <td>@item.Price €</td>
                            <td class="text-center">
                                <ul class="icons-list">
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            <i class="icon-menu9"></i>
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-right" id="delete-link">
                                            <li><a asp-controller="TicketType" asp-action="GetType" asp-route-id="@item.Id" data-ID="@item.Id" class="edit-style"><i class="icon-pencil"></i>Edit</a></li>
                                            <li><a data-toggle="modal" data-id="@item.Id" data-target="#exampleModal" class="delete-link"><i class="icon-x"></i>Delete</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    }
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Are you sure you want to delete this item?</div>
            <div class="modal-footer">
                <button class="btn btn-default delete-tickettype">YES</button>
                <button class="btn btn-default" type="button" data-dismiss="modal">NO</button>
            </div>
        </div>
    </div>
</div>

<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div class="modal fade" id="add-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Error</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">To add ticket type first you must enable selling online tickets!</div>
            <div class="modal-footer">
                <button class="btn btn-default" type="button" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>