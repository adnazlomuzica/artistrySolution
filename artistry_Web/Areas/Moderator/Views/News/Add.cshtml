@model artistry_Data.Models.News
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="page-header page-header-default">
    <div class="page-header-content">
        <div class="page-title">
            <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">News</span></h4>
        </div>
        <div class="heading-elements">
            <div class="heading-btn-group">
                <a asp-controller="Image" asp-action="AddNews" asp-route-id="@Model.Id" class="btn btn-link btn-float has-text"><i class="icon-image2 text-primary"></i><span>Gallery</span></a>
            </div>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="icon-home2 position-left"></i> Home</a></li>
            <li class="active"><a asp-controller="News" asp-action="Index">News</a></li>
        </ul>
    </div>
</div>

<div class="content" style="padding-bottom:0px;">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h6 class="panel-title">New</h6>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-action="collapse" href="#collapsePanel1"></a></li>
                    <li><a data-action="close" href="#reloadPanel1"></a></li>
                </ul>
            </div>
        </div>
        <div class="panel-body" id="collapsePanel1 reloadPanel1">
            <form asp-action="Save" role="form">
                @Html.AntiForgeryToken()
                <input asp-for="Id" type="hidden" />
                <input asp-for="MuseumId" type="hidden" />
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <label>Title</label>
                            <input asp-for="Title" type="text" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <label>Subtitle</label>
                            <textarea asp-for="SubTitle" rows="2" class="form-control"></textarea>
                            <span asp-validation-for="SubTitle" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <label>Text</label>
                            <textarea asp-for="Text" rows="9" class="form-control"></textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Save <i class="icon-arrow-right14 position-right"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>

