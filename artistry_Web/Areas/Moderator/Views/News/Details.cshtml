@model artistry_Web.Areas.Moderator.ViewModels.NewsVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link href="~/css/fancybox-style.css" rel="stylesheet" type="text/css" />

<div class="page-header page-header-default">
    <div class="page-header-content">
        <div class="page-title">
            <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">News</span></h4>
        </div>
        <div class="heading-elements">
            <div class="heading-btn-group">
                <a asp-controller="Image" asp-action="AddNews" asp-route-id="@Model.Id" class="btn btn-link btn-float has-text add-type"><i class="icon-image2 text-primary"></i><span>Gallery</span></a>
                <a asp-controller="News" asp-action="GetNews" asp-route-id="@Model.Id" class="btn btn-link btn-float has-text add-type"><i class="icon-pencil text-primary"></i><span>Edit</span></a>
                <a asp-controller="News" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-link btn-float has-text add-type"><i class="icon-trash text-primary"></i><span>Delete</span></a>
            </div>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="icon-home2 position-left"></i> Home</a></li>
            <li class="active"><a asp-controller="News" asp-action="Index">News</a></li>
            <li class="active"><a asp-controller="News" asp-action="Details">Details</a></li>
        </ul>
    </div>
</div>

<div class="content" style="padding-top:0px;padding-bottom:0;" id="closePanel1">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-toggle="collapse" data-target="#collapsePanel1" class="icon-arrow-down12"></a></li>
                    <li><a data-close="close" data-target="#closePanel1" class="icon-cross3"></a></li>
                </ul>
            </div>
        </div>
        <div class="panel-body" id="collapsePanel3">
            <div style="margin-bottom:30px;">
                <div class="row">
                    <p class="col-md-12 text-bold" style="font-size:18px">@Model.Title</p>
                </div>
                <div class="row">
                    <p class="col-md-12 text-semibold" style="font-size:16px;">@Model.Subtitle</p>
                </div><br />

                <div class="row">
                    <p class="col-md-12">@Model.Text</p>
                </div>

                <div class="row">
                    <div class="text-right">
                        <div class="col-md-10"></div>
                        <p class="col-md-2">@Model.Date.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>

                <div class="row">
                    @foreach (var item in Model.Img)
                    {
                        <a rel="group1" href="@Url.Action("RenderImage", "Image", new { id=item.Id})"><img src="@Url.Action("RenderThumb","Image", new { id=item.Id})" class="image-thumb" alt="" /></a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {

        $("a[rel=group1]").fancybox({
            'type': 'image',
            'transitionIn': 'none',
            'transitionOut': 'none'
        });
    });
</script>
