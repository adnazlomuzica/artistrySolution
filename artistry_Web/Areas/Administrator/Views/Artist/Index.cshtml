@model List<artistry_Web.Areas.Administrator.ViewModels.ArtistInfoVM>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ string search = "";}

<div class="page-header page-header-default">
    <div class="page-header-content">
        <div class="page-title">
            <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Artists</span></h4>
        </div>
        <div class="heading-elements">
            <div class="heading-btn-group">
                <a asp-controller="Artist" asp-action="Add" class="btn btn-link btn-float has-text add-museum"><i class="icon-plus-circle2 text-primary"></i><span>Add</span></a>
            </div>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="icon-home2 position-left"></i> Home</a></li>
            <li class="active"><a asp-controller="Artist" asp-action="Index">Artists</a></li>
        </ul>
    </div>
</div>
<div class="content" style="padding-bottom:0px;" id="closePanel">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title">Artists</h5>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-toggle="collapse" data-target="#collapsePanel" class="icon-arrow-down12"></a></li>
                    <li><a data-close="close" data-target="#closePanel" class="icon-cross3"></a></li>
                </ul>
            </div>
        </div>
        <div id="collapsePanel">
            <form asp-action="Search" style="display:inline;" method="get">
                <div class="input-group  input-field" style="margin-left:20px;margin-bottom:0px;padding-bottom:0;">
                    <div class="input-group-addon">
                        <span class="fa fa-search"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <input asp-for="@search" type="search" class="form-control" placeholder="Search.." />
                        </div>
                        <div class="col-md-1">
                            <input type="submit" class="btn btn-default" value="Search" />
                        </div>
                    </div>
                </div>
            </form>
            <br /><br /><hr />
            <table class="table datatable-show-all">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Born</th>
                        <th>Died</th>
                        <th>Nationality</th>
                        <th>Styles</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Born</td>
                            <td>@item.Died</td>
                            <td>@item.Country</td>
                            <td>
                                @foreach (var x in item.Styles)
                                {
                                    @x.Style.Name<br />
                                }
                            </td>
                            <td class="text-center">
                                <ul class="icons-list">
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            <i class="icon-menu9"></i>
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-right" id="delete-link">
                                            <li><a asp-controller="Artist" asp-action="Details" asp-route-id="@item.Id"><i class="icon-file-text"></i>Details</a></li>
                                            <li><a asp-controller="Artist" asp-action="GetArtist" asp-route-id="@item.Id" data-id="@item.Id" class="edit"><i class="icon-pencil"></i>Edit</a></li>
                                            <li><a data-toggle="modal" data-id="@item.Id" data-target="#exampleModal" class="delete-link"><i class="icon-x"></i>Delete</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    }
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Are you sure you want to delete this item?</div>
            <div class="modal-footer">
                <button class="btn btn-default delete-artist">YES</button>
                <button class="btn btn-default" type="button" data-dismiss="modal">NO</button>
            </div>
        </div>
    </div>
</div>
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>