@model artistry_Web.Areas.Administrator.ViewModels.ArtistVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="page-header page-header-default">
    <div class="page-header-content">
        <div class="page-title">
            <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Artists</span></h4>
        </div>
        <div class="heading-elements">
            <div class="heading-btn-group">
                <a asp-controller="Artist" asp-action="Add" class="btn btn-link btn-float has-text add-type"><i class="icon-plus-circle2 text-primary"></i><span>Add</span></a>
                <a asp-controller="Image" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-link btn-float has-text add-type"><i class="icon-image2 text-primary"></i><span>Gallery</span></a>
            </div>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="icon-home2 position-left"></i> Home</a></li>
            <li class="active"><a asp-controller="Artist" asp-action="Index">Artists</a></li>
            <li class="active"><a asp-controller="Artist" asp-action="GetArtist">Edit</a></li>
        </ul>
    </div>
</div>

<div class="content" style="padding-top:0px;" id="closePanel1">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title">Edit</h5>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-toggle="collapse" data-target="#collapsePanel1" class="icon-arrow-down12"></a></li>
                    <li><a data-close="close" data-target="#closePanel1" class="icon-cross3"></a></li>
                </ul>
            </div>
        </div>
        <div class="panel-body" id="collapsePanel1">
            <form asp-action="Edit" role="form">
                @Html.AntiForgeryToken()
                <input asp-for="Id" type="hidden" />
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Name</label>
                            <input asp-for="Name" type="text" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label>Born</label>
                            <input asp-for="Born" type="text" class="form-control" />
                            <span asp-validation-for="Born" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Nationality</label>
                            <select asp-for="CountryId" asp-items="@Model.Country" class="form-control"></select>
                        </div>

                        <div class="col-md-6">
                            <label>Died</label>
                            <input asp-for="Died" type="text" class="form-control" />
                            <span asp-validation-for="Died" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <label>Styles</label>
                            <select asp-for="StyleId" asp-items="@Model.Style" multiple="multiple" class="form-control"></select>
                            <span asp-validation-for="StyleId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <label>Biography</label>
                            <textarea asp-for="Biography" rows="5" cols="5" class="form-control" placeholder="Biography"></textarea>
                            <span asp-validation-for="Biography" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Save <i class="icon-arrow-right14 position-right"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>



