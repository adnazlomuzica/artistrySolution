@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<artistry_Data.Models.AppLogs>

<div class="page-header page-header-default">
    <div class="page-header-content">
        <div class="page-title">
            <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Application logs</span></h4>
        </div>
        <div class="heading-elements">
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="icon-home2 position-left"></i> Home</a></li>
            <li class="active"><a asp-controller="AppLog" asp-action="Index">Application logs</a></li>
        </ul>
    </div>
</div>
<div class="content" style="padding-bottom:0px;">
    <div class="panel panel-flat" style="padding-bottom:10px;">
        <div class="panel-heading">
            <h5 class="panel-title">Application logs</h5>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-action="collapse"></a></li>
                    <li><a data-action="close"></a></li>
                </ul>
            </div>
        </div>
        <div class="card" style="margin-top:20px; margin-left:10px;margin-right:10px;">
            <div class="card-body">
                <div class="table" style="background-color:#fff;">
                    <table class="table table-bordered table-responsive" style="width: 100%">
                        <tr>
                            <th>
                                Application
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Level
                            </th>
                            <th>
                                Message
                            </th>
                            <th>
                                Exception
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="width:10%">
                                    <p>@item.Application</p>
                                </td>
                                <td style="width:10%">
                                    <p> @item.Logged.ToString("dd/MM/yyyy")</p>
                                </td>
                                <td style="width:10%">
                                    <p> @item.Level</p>
                                </td>
                                <td>
                                    <div style="word-break: break-all; word-wrap:break-word;white-space:normal;">@item.Message</div>
                                </td>
                                <td>
                                    <div style="white-space:normal; word-wrap:break-word;width:150px;">@item.Exception</div>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




