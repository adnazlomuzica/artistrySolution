@model IEnumerable<artistry_Data.Models.Messages>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@foreach (var item in Model)
{

    <div class="media-left">
        <img src="~/assets/images/placeholder.jpg" class="img-circle img-sm" alt="">
        <span class="badge bg-danger-400 media-badge"></span>
    </div>
    <div class="media-body">
        <a href="#" class="media-heading">
            @if (item.Seen == false)
            {
                <span class="text-bold">@item.SenderId</span>
            }
            else
            {
                <span class="text-semibold">@item.SenderId</span>
            }

            @if (item.Date.Date == DateTime.Now.Date)
            {
                <span class="media-annotation pull-right">@item.Date.ToShortTimeString()</span>
            }
            else
            {
                <span class="media-annotation pull-right">@item.Date.ToShortDateString()</span>
            }
        </a>
        <span class="text-muted">@item.Text</span>
    </div>

}

@if (Model.Count() == 0)
{
    <div class="media-body" style="text-align:center;">
        There is no messages.
    </div>
}
<hr style="margin-top:20px; margin-bottom:0px;" />

